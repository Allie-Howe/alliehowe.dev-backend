{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "lib": [
      "es2019",
      "DOM",
    ],
    "skipLibCheck": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
}
